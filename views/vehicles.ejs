<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Vehicle Information Centre</title>
    <style>
        body {
            padding-top:50px;
            font-family: sans-serif;
            font-size: 3em;
        }

        li {
            margin: 0.5em 0;
        }

        .highlight {
            text-transform: uppercase;
            font-style: italic;
            color: cadetblue;
        }

    </style>
</head>

<body>
<main>
    <p>Here's a list of vehicles</p>
    <ul>
        <% vehicles.forEach(function(vehicle) { %>
            <li>
                A <span class="highlight"><%= vehicle.v_model %></span> <%= vehicle.v_make %> with registration # <strong><%= vehicle.v_reg %></strong>
            </li>
        <% }); %>
    </ul>
</main>

<footer>
</footer>

</body>
</html>